<div class="indexContainer">
  <section class="indexLabel">
    <h3>Learn to code,gain a new skill, get a new job</h3>
    <form class="" action="index.html" method="post" id="indexSearchForm">
      <input type="text" name="" value="" placeholder="Search the course" >
      <button type="button" name="button" class="btn btn-primary">Search</button>
    </form>
    <div class="" id="courseData">
       <h5><span class="num"> 50+ </span> Courses </h5>
       <h5><span class="num"> 50+ </span>Teachers</h5>
      <h5><span class="num">200+ </span> Students</h5>
    </div>
  </section>
  <section class="indexForms">
    <form class="" action="index.html" method="post" id="signupForm">
      <h3>Sign up</h3>
      <input type="text" name="" value="" id="StudentFirstName" placeholder="Enter the First Name">
      <input type="text" name="" value="" id="StudentLastName" placeholder="Enter the Last Name">
      <div class="gender">
            <input type="radio" name="gender" value="male"> Male<br>
            <input type="radio" name="gender" value="female"> Female<br>
            <input type="radio" name="gender" value="other"> Other<br>
      </div>
      <input type="text" name="" value="" id="StudentDob" placeholder="Enter the DOB">
      <input type="text" name="" value="" id="StudentPhone" placeholder="Enter the phone">
      <input type="text" name="" value="" id="StudentAddress" placeholder="Enter the Address">
      <input type="text" name="" value="" id="StudentEmail" placeholder="Enter the Email">
      <input type="text" name="" value="" id="StudentPassword" placeholder="Enter the password">
      <input type="text" name="" value="" id="StudentConfirmPassword" placeholder="Confirm the password">
      <button type="submit" name="button" class="btn btn-primary">Signup</button>
    </form>

    <form class="" action="index.html" method="post" id="loginForm" style="display:none">
      <h3>Log In</h3>
      <input type="text" name="" value="" placeholder="Enter the Email">
      <input type="text" name="" value="" placeholder="Enter the password">
      <button type="button" name="button" class="btn btn-primary">Log In</button>
    </form>
  </section>
</div>

